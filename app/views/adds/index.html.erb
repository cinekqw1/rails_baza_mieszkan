<p id="notice"><%= notice %></p>

<% if admin_signed_in? %>
          <li><%= link_to "New add", '/adds/new' , class: 'btn btn-success' %></li>
      <%end%>

<center><h1>Og≈Çoszenia</h1></center>

<% @adds.each do |f| %>
  <div class="col-md-2">
    
    <%=image_tag f.image, class: "img-responsive"%>
  </div>

  <div class="col-md-10">
    
    <div class="col-md-12">

      <% if admin_signed_in? %>
          <%= link_to "Edit Ad", "/adds/#{f.id}/edit", class: "btn btn-primary btn-xs" %>
          <%= link_to "Delete Ad", "/adds/#{f.id}", class: "btn btn-warning btn btn-primary btn-xs", method: :delete, data:{confirm: "Are you sure?"}  %>
      <%end%>


      <h4><%= link_to f.title, f %></h4>
    </div>

    <div class="col-md-6">
      <strong>Address: </strong><%= f.address %>,<%= f.city %>
    </div>

    <div class="col-md-6">
        <strong>Price: </strong><%= f.price %>
    </div>

  </div>

  <div class="col-md-12">
    <hr>
  </div>

<%end%>


<br>


